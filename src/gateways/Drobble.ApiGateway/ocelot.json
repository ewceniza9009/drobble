{
  "Routes": [
    // Product Catalog
    {
      "UpstreamPathTemplate": "/api/products",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5220
        }
      ],
      "DownstreamPathTemplate": "/api/v1/products"
    },
    {
      "UpstreamPathTemplate": "/api/products/{id}",
      "UpstreamHttpMethod": [ "GET", "PUT" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5220
        }
      ],
      "DownstreamPathTemplate": "/api/v1/products/{id}"
    },
    {
      "UpstreamPathTemplate": "/api/products/batch",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5220
        }
      ],
      "DownstreamPathTemplate": "/api/v1/products/batch"
    },
    // User Management (Public)
    {
      "DownstreamPathTemplate": "/api/v1/users/{action}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5297
        }
      ],
      "UpstreamPathTemplate": "/api/auth/{action}",
      "UpstreamHttpMethod": [ "POST" ]
    },
    // Shopping Cart
    {
      "DownstreamPathTemplate": "/api/v1/carts",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5256
        }
      ],
      "UpstreamPathTemplate": "/api/cart",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/carts/items/{productId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5256
        }
      ],
      "UpstreamPathTemplate": "/api/cart/items/{productId}",
      "UpstreamHttpMethod": [ "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/carts/items",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5256
        }
      ],
      "UpstreamPathTemplate": "/api/cart/items",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/carts/merge",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5256
        }
      ],
      "UpstreamPathTemplate": "/api/cart/merge",
      "UpstreamHttpMethod": [ "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    // Order Management (Secure)
    {
      "DownstreamPathTemplate": "/api/v1/orders/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5059
        }
      ],
      "UpstreamPathTemplate": "/api/orders/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    // Search Discovery
    {
      "UpstreamPathTemplate": "/api/search",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamScheme": "http",
      "DownstreamPathTemplate": "/api/v1/search",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5209
        } // Default port for SearchDiscovery.Api
      ]
    },
    // Reviews
    {
      "UpstreamPathTemplate": "/api/reviews",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5086
        }
      ],
      "DownstreamPathTemplate": "/api/v1/reviews",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "UpstreamPathTemplate": "/api/reviews/product/{productId}",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5086
        }
      ],
      "DownstreamPathTemplate": "/api/v1/reviews/product/{productId}"
    },
    {
      "UpstreamPathTemplate": "/api/reviews/product/{productId}/average-rating",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5086
        }
      ],
      "DownstreamPathTemplate": "/api/v1/reviews/product/{productId}/average-rating"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5015"
  }
}